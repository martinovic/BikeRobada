<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff3f0e9">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:id="@+id/linearLatout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="12dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textIsSelectable="false" />

            <TextView android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:capitalize="characters"
                android:gravity="center_vertical|center|center_horizontal"
                android:singleLine="false" android:textColor="#ffffffff"
                android:textColorHint="#ffffffff" android:textSize="18dip"
                android:textStyle="bold"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Dar aviso a"
                android:id="@+id/textView4"
                android:textSize="12dip"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textIsSelectable="false" />

            <TextView android:id="@+id/textView3" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center|center_horizontal"
                android:textColor="#fffbfff8"
                android:textSize="16dip" android:textStyle="bold"
                android:visibility="visible"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Datos bibicleta"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dip"
                android:textSize="12dip" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datosBicicleta"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ff9a9997"
                android:textSize="10dip" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:id="@+id/separator2"
                android:visibility="visible"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/datosBicicleta"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_below="@+id/separator2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Datos Velocidades"
                android:textSize="12dip" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datosVelocidades"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff9a9997"
                android:textSize="10dip" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:id="@+id/separator3"
                android:visibility="visible"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/datosVelocidades"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_below="@+id/separator3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Numeros de serie"
                android:textSize="12dip" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numerosSerie"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff9a9997"
                android:textSize="10dip" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:id="@+id/separator4"
                android:visibility="visible"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/numerosSerie"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_below="@+id/separator3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Datos del robo"
                android:textSize="12dip" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datosRobo"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff9a9997"
                android:textSize="10dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:id="@+id/separator5"
                android:visibility="visible"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/datosRobo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_below="@+id/separator5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Otros datos"
                android:textSize="12dip" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datosOtros"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff9a9997"
                android:textSize="10dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:id="@+id/separator6"
                android:visibility="visible"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/datosOtros"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!--<ImageView
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:id="@+id/imageView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="122dp"
                android:background="#ffc7c7c7" />-->
        </LinearLayout>
    </ScrollView>



</RelativeLayout>