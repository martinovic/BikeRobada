<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#fff3f0e9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText android:id="@+id/nroCuadro" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#52000000"
        android:hint="Nro cuadro" android:textColorHint="#7fdce4de"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1" />

    <EditText android:id="@+id/nroHorquilla" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#52000000" android:hint="Nro horquilla"
        android:textColorHint="#7fdce4de" android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:layout_below="@+id/nroCuadro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:maxLines="1"
        android:inputType="text" />

    <ImageButton android:id="@+id/boton1" android:layout_width="80dip"
        android:layout_height="80dip"
        android:adjustViewBounds="false"
        android:background="#DF7401" android:src="@drawable/abc_ic_search"
        android:text="Buscar" android:textAlignment="gravity"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
